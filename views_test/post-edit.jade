extends layout
//block main
    form(action="/cat_"+cat_id+"/post/" + post.id + "/edit" method="POST")
        div.row
            div.col
                div.bg-light.p-5
                    input(value=post.name id="name" name="name")
        div.row
            div.col
                div
                    select(name="category")
                        each cat in categories
                            option(value=cat.cat_id selected=(post.category === cat.cat_id))= cat.cat_name
                div
                    textarea(id="content" name="content")=post.content
        div
            input(type="Submit" value="Sauvegarder")
    div.row
        form(action="/cat_"+cat_id+"/post/" + post.id +"/delete" method="POST")
            input(type="Submit" value="Delete")

block main
    div.container-sm
        div.row
            div.col
                div.header
                    nav.d-flex.justify-content-between.align-items-center
                        h3.text-muted.mr-auto.p-2 Editer un article
                        h3.text-muted.mr-auto.p-2=cat_name
        div.row.bg-light.p-5

            form(action="/cat_"+cat_id+"/post/" + post.id + "/edit" method="POST")
                div.row
                    div.row
                        div.col
                            input(value=post.name id="name" name="name" placeholder="Nom de l'article" style="height: 40px" )
                        div.col 
                            button.btn.btn-primary.btn-lg(type='Submit' style="height: 50px") Sauvegarder
                        div.col
                            a(href="/cat_"+cat_id)
                                button.btn.btn-secondary.btn-sm(type='button' style="height: 50px") Annuler
                        div.col 
                            form(action="/cat_"+cat_id+"/post/" + post.id +"/delete" method="POST")
                                button.btn.btn-danger.btn-lg(type='Submit' style="height: 50px") Supprimer
                div.row
                    textarea.form-control(id="content" name="content" style="height: 300px")=post.content
        if data
            div.p-2.alert.alert-danger
                h4.text-center=data.errors
     