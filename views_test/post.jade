extends layout
block main
    div.container-sm
        div.row
            div.col
                div.header
                    nav.d-flex.justify-content-between.align-items-center
                        h3.text-muted.mr-auto.p-2 Blog
                        form(action="../post/create" method="GET")
                            input(type="Submit" value="Nouvel article")                      
        div.row
            div.col
                div.bg-light.p-5
                    div.container
                        h1.text-center=post.name
                    div.container
                        span.badge.rounded-pill.bg-primary=post.cat_name
                        span.badge.rounded-pill.bg-secondary=post.login
                        span.badge.rounded-pill.bg-secondary=post.post_date
                        p=post.content
            div.col
                div.row.bg-light.p-5
                    form(action=("../post/"+post.id+"/comment") method="POST" style="height: 400px")              /A modifier
                        div.row
                            textarea.form-control(id="comment" name="comment" placeholder="Commentaire" style="height: 250px")
                            button.btn.btn-primary.btn-lg(type='Submit' style="height: 50px") Commenter
                            div.p-2.alert.alert-danger
                                h4.text-center Erreur